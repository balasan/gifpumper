#addMenu.uiOpen(ng-show="addMenu" add-menu)
  .editTabs( ng-init="addType='image'")
    span.tab( ng-class="{active:addType=='image'}"  ng-click="addType='image'") Image 
    span.tab( ng-class="{active:addType=='text'}"  ng-click="addType='text'") Text 
    span.tab(ng-class="{active:addType=='media'}"  ng-click="addType='media'") Media 
    span.tab(ng-class="{active:addType=='div'}"  ng-click="addType='div'") Div
  
  #editImageContainer.menuContainer(ng-show="addType=='image'")
    br
    |ADD IMAGE
    .uploadForm(ng-controller="uploadCtrl")
        //- label(for='photos') Uploda your own file
        //- p.help-block Select pictures
        div.button( type='button' value="Upload File") Upload File
          input#uploadBtn.btn(type='file', ng-file-select='onFileSelect($files)', multiple='multiple')


        .container(ng-repeat='file in files')
          .progress
            .progress-bar(role='progressbar')
              | {{file.name}} : {{file.progress}}
          button.btn.btn-ttc(type='button', ng-click='abort($index)', ng-show='file.progress != 100') Abort



    p or enter image url:
    input.textInput#gifUrlA(ng-model="newImgUrl" type='text', name='gifUrlA', placeholder='http://blahblah.gif',onfocus="typing=true; ", onblur="typing=false;")
    //- p repetitions:
    //- input.textInput#addNumber(ng-init="imageNumber=1" ng-model="imageNumber" type='text', name='addNumber', value='1', maxlength='1/',onfocus="value=''")
    p
    input.button( type='button', name='addGif', value='add', ng-click="addNewImg()")

  #editTextContainer.menuContainer(ng-show="addType=='text'")
    textarea#addContent(ckeditor="editorOptions" ng-model="text")
    input.button( type='button', name='addGif', value='add', ng-click="addNewImg()")

  #editMediaContainer.menuContainer(ng-show="addType=='media'")
    p
    | youtube link:
    br
    input.mediaAdd(ng-model="youtubeUrl" type='text', id='youtubeUrl', placeholder='http://youtube.com/xxxx',onfocus="typing=true; ", onblur="typing=false;")
    br
    br
    | vimeo link:
    br
    input.mediaAdd(ng-model="vimeoUrl" type='text', id='vimeoUrl', placeholder='http://vimeo.com/555555',onfocus="typing=true; ", onblur="typing=false;")
    br
    br
    | soundcloud embed:
    br
    textarea.mediaAdd(ng-model="soundcloudUrl" type='text', id='soundCloud', placeholder='paste soundcloud embed code here',onfocus="typing=true; ", onblur="typing=false;")
    br
    br
    | mp3/mov embed:
    br
    input.mediaAdd(ng-model="mp3Url"  type='text', id='mp3', placeholder='http://domain.com/sound.mp3',onfocus="typing=true; ", onblur="typing=false;")
    br
    br
    | other:
    br
    textarea#media(ng-model="customMedia"  type='text', name='embed', placeholder='paste embed code here',onfocus="typing=true; ", onblur="typing=false;")
    br
    input.button( type='button', name='addGif', value='add', ng-click="addNewImg()")

  #editDivContainer.menuContainer(ng-show="addType=='div'")
    p
    | background color:
    br
    input.textInput#divColor(ng-model="divColor"  type='text', placeholder='name, hex or rgba(r,g,b,a)',onfocus="typing=true; ", onblur="typing=false;")
    br
    | background image url:
    br
    input.textInput#divBgUrl(ng-model="divBackground" type='text', placeholder='http://blahblah.gif',onfocus="typing=true; ", onblur="typing=false;")
    br
    | preset: 
    form(name='divType')
      input(type='radio', ng-model='geoPreset', value='sPlane', checked='CHECKED')
      | flat div
      br
      input(type='radio', ng-model='geoPreset', value='hPlane')
      | ground plane
      br
      input(type='radio', ng-model='geoPreset', value='vPlane')
      | wall plane    
      br
    br
    input.button( type='button', name='addGif', value='add', ng-click="addNewImg()")
  
